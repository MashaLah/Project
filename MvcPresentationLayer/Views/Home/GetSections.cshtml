@model IEnumerable<MvcPresentationLayer.Models.Section>
<table class="table">

    @foreach (var item in Model)
    {
        <tr class="success">
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.ActionLink("Add Forum", "Create", "Forum", new { sectionId = item.Id }, null)
            </td>
            <!--<td>Html.Action("CreateForumPartial")</td>-->
        </tr>
        if (item.Topics != null)
        {
            foreach (var frm in item.Topics)
            {
                <tr>
                    <td>
                        @Html.ActionLink(frm.Title, "Index", "Topic", new { id = frm.Id }, null)
                    </td>
                </tr>
            }
        }
    }

</table>
