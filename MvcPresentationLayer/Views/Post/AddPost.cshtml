@model MvcPresentationLayer.Models.Post

@if (Request.RequestContext.HttpContext.User.Identity.IsAuthenticated)
{
    using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()
        <div class="form-horizontal center-block col-md-10">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-10">
                    @Html.TextArea("post", "", 5, 150, new { @class = "form-control", style = "width: 100%; max-width: 100%;" })
                    @Html.ValidationMessage("Post", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-4 col-md-12">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
}
