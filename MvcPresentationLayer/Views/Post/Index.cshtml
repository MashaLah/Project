@model MvcPresentationLayer.Models.PageInfo
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
<div>
    @Html.DisplayFor(modelItem => modelItem.Topic.Title)
</div>

<div>
    @Html.DisplayFor(modelItem => modelItem.Topic.Description)
    @Html.Hidden("topicId", Model.Topic.Id)
</div>
<div id="indicator" style="display:none">
    Wait...
</div>
<div id="posts">
    @{Html.RenderAction("GetPosts"); }
</div>

@using (Ajax.BeginForm("GetPosts", new AjaxOptions { UpdateTargetId = "posts", OnSuccess = "processData" }))
{
    @Html.Hidden("topicId", Model.Topic.Id)
    <div class="btn-group">
        @Html.PageLinks(Model)
    </div>
}

@if (Request.RequestContext.HttpContext.User.Identity.IsAuthenticated)
{
    using (Html.BeginForm("Create", "Post", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.Hidden("topicId", Model.Topic.Id)
        <div class="form-horizontal center-block col-md-10">
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <div class="col-md-10">
                    @Html.TextArea("Text", "", 5, 150, new { @class = "form-control", style = "width: 100%; max-width: 100%;" })
                    @Html.ValidationMessage("MvcPresentationLayer.Models.Post", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-4 col-md-12">
                    <input type="submit" value="Create" class="btn btn-default" />
                </div>
            </div>
        </div>
    }
}

@section scripts
    {
    <script>
        $('.list-group-item')
            .filter(':even:not(.list-group-item-danger)')
            .css("background-color", "#f7f9fa");

        function processData(data) {
            $("#posts").empty();
            $('#posts').append('<ul class="list-group table-striped"></ul>');
            for (var i = 0; i < data.length; i++) {
                var post = data[i];
                $('#posts>ul').append('<li class="list-group-item">' + ' <div class="container-fluid">' +
                    '<div class="row">' + '<div class="col-md-2">' + '<div class="row">' + '<small>' + formatDate(post.Date.substring(6, post.Date.length - 2))
+ '</small>'
                + '</div> <div class="row">' + '<small>' + post.User.Profile.Login + '</small>'
                + '<div class="row"> <div class="img-responsive"> <img width="75" height="75" src="~/Content/AvatarImage/2112715.png" alt="Avatar image" />'
                + ' </div> </div> </div> </div> <div class="col-md-10"> '
                + '<div class="row"> <div style="word-wrap:break-word;">' + post.Text + '</div>'
                + '</div> </div></div> </div></li>');
            }
            $('.list-group-item')
            .filter(':even:not(.list-group-item-danger)')
            .css("background-color", "#f7f9fa");
        }

        function formatDate(ms) {

            var date = new Date(parseInt(ms));
            var day = date.getDate();
            var month = date.getMonth()+1;
            var hour = date.getHours();
            var mins = date.getMinutes() + '';

            if (day.length == 1)
            {
                day = "0" + day;
            }

            if (month.length == 1) {
                month = "0" + month;
            }

            if (mins.length == 1) {
                mins = "0" + mins;
            }

           return month + "/" + day + "/" + date.getFullYear() + " " + hour + ":" + mins;
        }



    </script>

}
